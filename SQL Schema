(107, 'Bike Lock', 'Accessories', 35.00),
(108, 'Jersey', 'Apparel', 45.00),
(109, 'Sunglasses', 'Accessories', 60.00),
(110, 'Bike Pump', 'Tools', 30.00);


-- 3️⃣ Create Orders Table (Connecting Customers & Products)
CREATE TABLE Orders (
    OrderID INT PRIMARY KEY,
    OrderDate DATE,
    CustomerID INT,
    ProductID INT,
    Quantity INT,
    FOREIGN KEY (CustomerID) REFERENCES Customers(CustomerID),
    FOREIGN KEY (ProductID) REFERENCES Products(ProductID)
);

