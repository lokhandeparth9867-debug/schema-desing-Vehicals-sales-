-- 2️⃣ Create Products Table
CREATE TABLE Products (
    ProductID INT PRIMARY KEY,
    ProductName VARCHAR(100),
    Category VARCHAR(50),
    UnitPrice DECIMAL(10,2)
);

-- Insert 10 Products
INSERT INTO Products VALUES
(101, 'Mountain Bike', 'Bikes', 1200.00),
(102, 'Helmet', 'Accessories', 50.00),
(103, 'Gloves', 'Accessories', 25.00),
(104, 'Road Bike', 'Bikes', 1500.00),
